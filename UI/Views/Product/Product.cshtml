                                <tr>
                                    <th>Product Name</th>
                                    <th>Category Name</th>
                                    <th>Stock Code</th>
                                    <th>Created Date</th>
                                    <th>Modified Date</th>
                                    <th>Is Active</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ProductDetails)
                                {
                                    <tr>
                                        <td>
                                            @item.Product.Name
                                        </td>
                                        <td>
