@model CampaignViewModel
@{
    ViewBag.Title = "Kampanya listele";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Campaign List</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index-2.html">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Campaign list</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce"> 
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Day</th>
                                    <th>Start Hour</th>
                                    <th>End Hour</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Created Date</th>
                                    <th>Modified Date</th>
                                    <th>Is Active</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CampaignDetails)
                                {
                                <tr>
                                    <td>
                                        @item.Campaign.Name
                                    </td>
                                    <td>
                                        @item.Type
                                    </td>
                                    <td>
                                        @item.Day
                                    </td>
                                    <td>
                                        @item.StartHour
                                    </td>
                                    <td>
                                        @item.EndHour
                                    </td>
                                    <td>
                                        @item.Campaign.Description
                                    </td>
                                    <td>
                                        @item.Campaign.StartDate
                                    </td>
                                    <td>
                                        @item.Campaign.EndDate
                                    </td>
                                    <td>
                                        @item.Campaign.CreatedDate
                                    </td>
                                    <td>
                                        @item.Campaign.ModifiedDate
                                    </td>
                                    <td>
                                        @item.Campaign.IsActive
                                    </td>                                  
                                    <td>
                                        <a href="" class="btn btn-info " type="button"><i class="fa fa-paste"></i> Edit</a>
                                        <a href="" class="btn btn-danger " type="button"><i class="fa fa-warning"></i> Delete</a>
                                    </td>
                                </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Day</th>
                                    <th>Start Hour</th>
                                    <th>End Hour</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Created Date</th>
                                    <th>Modified Date</th>
                                    <th>Is Active</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<div class="footer">
    <div class="float-right">
        10GB of <strong>250GB</strong> Free.
    </div>
    <div>
    </div>
</div>

