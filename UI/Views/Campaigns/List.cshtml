@model CampaignViewModel
@{
    ViewBag.Title = "Kampanya listele";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Campaign List</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index-2.html">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Campaign list</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Açıklama</th>
                                    <th>Başlama Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                    <th>Kural Tipi</th>
                                    <th>Kural Değeir</th>
                                    <th>Ödül Tipi</th>
                                    <th>Ödül Değeri</th>
                                    <th>Kampanya Tipi</th>
                                    <th>Şirket Adı</th>
                                    <th>Kampanya Günü</th>
                                    <th>Başlama Saati</th>
                                    <th>Bitiş Saati</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Son Değiştirilme Tarihi</th>
                                    <th>Aktiflik ?</th>
                                    <th>Silinme ?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CampaignDetails)
                                {
                                    <tr>
                                        <td>
                                            @item.Campaign.Name
                                        </td>
                                        <td>
                                            @item.Campaign.Description
                                        </td>
                                        <td>
                                            @item.Campaign.StartDate
                                        </td>
                                        <td>
                                            @item.Campaign.EndDate
                                        </td>
                                        <td>
                                            @item.CampaignRuleType
                                        </td>
                                        <td>
                                            @item.CampaignRuleValue
                                        </td>
                                        <td>
                                            @item.CampaignRewardType
                                        </td>
                                        <td>
                                            @item.CampaignRewardValue
                                        </td>
                                        <td>
                                            @item.CampaignType
                                        </td>
                                        <td>
                                            @item.CompanyName
                                        </td>
                                        <td>
                                            @item.CampaignDay.DayofWeek
                                        </td>
                                        <td>
                                            @item.CampaignHour.StartedHour
                                        </td>
                                        <td>
                                            @item.CampaignHour.EndedHour
                                        </td>
                                        <td>
                                            @item.Campaign.CreatedDate
                                        </td>
                                        <td>
                                            @item.Campaign.ModifiedDate
                                        </td>
                                        <td>
                                            @item.Campaign.IsActive
                                        </td>
                                        <td>
                                            @item.Campaign.IsDeleted
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <a href="" class="btn btn-info " type="button"><i class="fa fa-paste"></i> Edit</a>
                                            <form asp-action="Delete" asp-route-id="@item.Campaign.Id" method="post">
                                                <button type="submit" class="btn btn-danger" onclick="return functionConfirm(this)">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                <script type="text/javascript">
                                    function functionConfirm(event) {
                                        swal({
                                            title: 'are you sur?',
                                            text: "You will not be able to recover this item",
                                            type: 'warning',
                                            showCancelButton: true,
                                            cancelButtonText: 'No',
                                            cancelButtonClass: 'btn btn-danger',
                                            showConfirmButton: true,
                                            confirmButtonText: 'Yes',
                                            confirmButtonClass: 'btn btn-success'
                                        }, function (isConfirm) {
                                            if (isConfirm) {
                                                $('form').submit();
                                                return true;
                                            } else {
                                                return false;
                                            }
                                        });
                                        return false;
                                    }
                                </script>
                            </tbody>                          
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<div class="footer">
    <div class="float-right">
        Deneme <strong>1-2</strong> Deneme.
    </div>
    <div>
    </div>
</div>

