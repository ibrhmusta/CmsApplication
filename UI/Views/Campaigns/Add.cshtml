@model CampaignModel

@{
    ViewBag.Title = "Kampanya Ekle";
}

<h2>Kampanya Ekle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="form-group  row">
                        <label class="col-sm-4 col-form-label">Kampanya Adı</label>
                        <div class="col-sm-8">
                            <input id="Name" required type="text" min="3" class="form-control" placeholder="Kampanya Adı" asp-for="Campaign.Name" />
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Açıklaması</label>
                            <input id="Description" type="text" class="form-control" placeholder="Açıklaması" asp-for="Campaign.Description" />
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Başlama Tarihi</label>
                            <input id="Description" type="date" class="form-control" asp-for="Campaign.StartDate" />
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Bitiş Tarihi</label>
                            <input id="Description" type="date" class="form-control" asp-for="Campaign.EndDate" />
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Günü</label>
                            <select class="form-control" id="DayOfWeek" asp-for="CampaignDay.DayofWeek">
                                <option>Gün Seçiniz</option>
                                <option value="0">Pazartesi</option>
                                <option value="1">Salı</option>
                                <option value="2">Çarşamba</option>
                                <option value="3">Perşembe</option>
                                <option value="4">Cuma</option>
                                <option value="5">Cumartesi</option>
                                <option value="6">Pazar</option>
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Başlama Saati</label>
                            <input class="form-control" type="time" id="StartTime" asp-for="CampaignHour.StartedHour" />
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Bitiş Saati</label>
                            <input class="form-control" type="time" id="EndTime" asp-for="CampaignHour.EndedHour" />
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Kampanya Tipi</label>
                            <select id="CampaignTypeId" class="form-control" asp-for="CampaignTypeId">
                                <option>Kampanya tipi seçiniz</option>
                                @foreach (var item in Model.campaignTypes)
                                {
                                    <option value="@(item.Id)">@(item.Name)</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Kural Tipi</label>
                            <select id="CampaignRuleTypeId" class="form-control" asp-for="CampaignRuleTypeId">
                                <option>Kampanya kural tipi seçiniz</option>
                                @foreach (var item in Model.campaignRuleTypes)
                                {
                                    <option value="@(item.Id)">@(item.Name)</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Kural Sınırı</label>
                            <select id="RuleValue" class="form-control" asp-for="CampaignRule.Value">
                                <option>Kural sınırı belirleyiniz</option>
                                @for (int i = 50; i <= 1000; i += 50)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Ödül Tipi</label>
                            <select id="CampaignRewardTypeId" class="form-control" asp-for="CampaignRewardTypeId">
                                <option>Kampanya ödül tipi seçiniz</option>
                                @foreach (var item in Model.campaignRewardTypes)
                                {
                                    <option value="@(item.Id)">@(item.Name)</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <label class="col-sm-4 col-form-label">Ödül Değeri</label>
                            <select id="RewardValue" class="form-control" asp-for="CampaignReward.Value">
                                <option>Ödül değerini seçiniz</option>
                                @for (int i = 5; i <= 250; i += 5)
                                {                                   
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="col-sm-12">
                        <button class="btn btn-block btn-outline btn-primary" type="submit">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index", "Home")
</div>