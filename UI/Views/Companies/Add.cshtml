@model CompanyViewModel

@{
    ViewBag.Title = "Şirket Ekle";
}

<h2>Şirket Ekle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Şirket <small>  Ekleme </small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-group  row">
                        <label class="col-sm-4 col-form-label">Şirket Adı</label>
                        <div class="col-sm-8">
                            <input name="Name" id="Name" required type="text" class="form-control" placeholder="Şirket Adı"/>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="col-sm-12">
                        <button class="btn btn-block btn-outline btn-primary" type="submit">Kaydet</button>
                    </div>                                      
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index","Home")
</div>